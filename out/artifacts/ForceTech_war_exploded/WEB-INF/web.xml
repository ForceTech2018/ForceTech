<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>logare</servlet-name>
        <servlet-class>com.servlets.logare</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>inregistrare</servlet-name>
        <servlet-class>com.servlets.inregistrare</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.servlets.logout</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>interceptor</servlet-name>
        <servlet-class>com.servlets.interceptor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logare</servlet-name>
        <url-pattern>/logare</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>inregistrare</servlet-name>
        <url-pattern>/inregistrare</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>interceptor</servlet-name>
        <url-pattern>/interceptor</url-pattern>
    </servlet-mapping>
</web-app>